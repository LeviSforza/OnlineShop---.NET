
@{
    ViewData["Title"] = "Order";
}

<h1>Your order</h1>

<p class=@ViewBag.red>@ViewBag.message</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Image
            </th>
            <th>
                Amount in cart
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (ViewBag.list))
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    <img src=@item.ImageUrl id="img" asp-append-version="true" width="100" height="100" />
                </td>
                <td>
                    @ViewBag.amount[@item.ArticleID]
                </td>
            </tr>
        }
    </tbody>
</table>

<p style="text-align: right; font-size: 26px; font-weight: 600;">To pay: @ViewBag.sum</p>

<h2>Personal details for delivery</h2>
<div>
    <form asp-action="Confirmed">
        <div class="form-row" >
            <div class="col-md-3 mb-3">
                <label for="name" class="control-label">First name</label>
                <input type="text" class="form-control" id="name" placeholder="First name"  name="name" required/>
            </div>
            <div class="col-md-3 mb-3">
                <label for="surname">Last name</label>
                <input type="text" class="form-control" id="surname" placeholder="Last name" name="surname" required/>
            </div>
            <div class="col-md-3 mb-3">
                <label for="phone">Phone number</label>
                <input type="tel" class="form-control" id="phone" placeholder="Phone number" name="phone" required/>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="city">City</label>
                <input type="text" class="form-control" id="city" placeholder="City" name="city" required/>
            </div>
            <div class="col-md-2 mb-3">
                <label for="postcode">Postcode</label>
                <input type="text" class="form-control" id="postcode" placeholder="Postcode" name="postcode" required/>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-3 mb-3">
                <label for="street">Street</label>
                <input type="text" class="form-control" id="street" placeholder="Street" name="street" required/>
            </div>
            <div class="col-md-2 mb-3">
                <label for="house">House number</label>
                <input type="text" class="form-control" id="house" placeholder="House number" name="house" required/>
            </div>
        </div>
        <div class="form-group">
            <h4>Choose the method of payment:</h4>
            <label for="payment"></label>
            <div class="form-check">
                <input type="radio" id="blik" name="payment" value="Blik" required />
                <label for="blik">Blik</label><br>
                <input type="radio" id="transfer" name="payment" value="Transfer" />
                <label for="transfer">Transfer</label><br>
                <input type="radio" id="cod" name="payment" value="Cash on delivery" />
                <label for="cod">Cash on delivery</label>
            </div>
        </div>
        <input class="btn btn-primary" type="submit" value="Confirm the order"/>
    </form>
</div>


